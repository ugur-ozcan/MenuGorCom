@using MenuGorCom.Application.DTOs
@model IEnumerable<AdminDto>

<h1>Admin Paneli</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>E-posta</th>
            <th>Son Giriş</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Id</td>
                <td>@admin.Username</td>
                <td>@admin.Email</td>
                <td>@admin.LastLogin</td>
                <td>@(admin.IsDeleted ? "Pasif" : "Aktif")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@admin.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@admin.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
